{% extends 'admin/admin.html.twig' %}

{% form_theme form 'form/custom_fields.html.twig' %}

{% block title %}{{ parent() }} Modifications punitions {% endblock %}

{% set menu_discipline = true %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary text-center">Modifier la punition</h6>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.name) }}
                </div>
            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-success btn-block" value="Modifier" name="edit_discipline"/>
                <a href="{{ path('punition_index',{'id': punition.discipline.id }) }}"
                   class="btn btn-google btn-block">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}